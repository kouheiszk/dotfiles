;; 上書きする場合は~/.gitconfig_localに記述する
[user]
	name = Kouhei Suzuki
	email = kouhei.szk@gmail.com

[core]
    excludesfile = ~/.gitignore_global
    attributesfile = ~/.gitattributes_global
    editor = vim
    pager = nkf -w | LESSCHARSET=utf-8 less
    precomposeunicode = true
    quotepath = false
    ignorecase = false

[merge]
    tool = vimdiff
    renamelimit = 3000
    ff = true

[merge "mergepbx"]
    name = Xcode project files merger
    driver = mergepbx %O %A %B

[color]
    ui = true

[diff]
    tool = vimdiff
    algorithm = histogram

[difftool]
    prompt = true

[alias]
    co   = checkout
    cob  = checkout -b
    cm   = commit
    cma  = commit --amend
    st   = status --short --branch
    br   = branch
    di   = diff --color
    dic  = diff --color --cached
    ft   = fetch
    wh   = whatchanged
    stat = log --stat --summary
    ht   = log --pretty=format:\"%C(yellow)%h%Creset %ad | %s%C(green)%d%Creset %C(cyan)[%an]%Creset\" --graph --date=short
    htd  = log --pretty=format:\"%C(yellow)%h%Creset %ad | %s%C(green)%d%Creset %C(cyan)[%an]%Creset\" --graph --date=local
    lt   = log -1 HEAD
    ld   = log -u -1
    lf   = log --follow -p
    cifu = commit --fixup=HEAD
    mt   = mergetool
    rv   = remote -v
    ru   = remote update
    rhd  = reset --hard
    rst  = reset --soft
    ps = !git push origin `git rev-parse --abbrev-ref HEAD`
    pl = !git pull origin `git rev-parse --abbrev-ref HEAD`

[include]
    path = ~/.local_gitconfig

[filter "media"]
	clean = git-media-clean %f
  smudge = git-media-smudge %f

[ghq]
  root = ~/workspace/src

[pull]
	rebase = false

[push]
	default = simple

[github]
	user = kouheiszk

[credential]
	helper = osxkeychain

;; 上書きする場合は~/.gitconfig_localに記述する
[user]
    name = Kouhei Suzuki
    email = kouhei.szk@gmail.com

[core]
    excludesfile = ~/.gitignore_global
    attributesfile = ~/.gitattributes_global
    editor = vim
    pager = nkf -w | LESSCHARSET=utf-8 less

[merge]
    tool = vimdiff
    renamelimit = 3000
    ff = true

[color]
    ui = true

[diff]
    tool = vimdiff

[difftool]
    prompt = true

[alias]
    co   = checkout
    cm   = commit
    cma  = commit --amend
    st   = status --short --branch
    br   = branch
    di   = diff --color --color-words
    dp   = diff --color --patience
    ft   = fetch
    wh   = whatchanged
    stat = log --stat --summary
    ht   = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    hf   = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short --follow -p
    lt   = log -1 HEAD
    ld   = log -u -1
    lf   = log --follow -p
    cifu = commit --fixup=HEAD
    mt   = mergetool

[include]
    path = ~/.local_gitconfig


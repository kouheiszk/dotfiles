#!/bin/sh

FILE_AWS_CREDENTIALS="${HOME}/.aws/credentials"

if [ -e ${FILE_AWS_CREDENTIALS} ]; then
  mv ${FILE_AWS_CREDENTIALS} ${FILE_AWS_CREDENTIALS}.bak;
fi

for i in `ls ${HOME}/.aws/source/*.rc`; do \
  name=`echo $i | sed 's/^.*\///' | sed 's/\.rc$//'` \
  && echo "[$name]" >> ${FILE_AWS_CREDENTIALS} \
  && cat $i >> ${FILE_AWS_CREDENTIALS} \
  && echo "" >> ${FILE_AWS_CREDENTIALS} ;done \
  && cat ${FILE_AWS_CREDENTIALS}
